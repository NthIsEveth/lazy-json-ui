{
  "compilerOptions": {
    "composite":true,
    "baseUrl": ".",
    "target": "es2016",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "allowJs": false,
    "noUnusedLocals": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "bundler",
    /* Linting */
    "strict": true,
  },
  "include": ["src/**/*"]
}
